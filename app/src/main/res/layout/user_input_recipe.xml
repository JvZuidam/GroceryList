<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/UserInputNameRec"
        android:maxLength="20"
        android:inputType="text"
        android:maxLines="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Recept"
        android:text="" />

    <EditText
        android:id="@+id/UserInputName"
        android:maxLength="20"
        android:inputType="text"
        android:maxLines="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Ingredient"
        android:text="" />

    <EditText
        android:id="@+id/UserInputAmount"
        android:inputType="number"
        android:maxLines="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Hoeveelheid"/>

    <Spinner
        android:id="@+id/input_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/UserInputAmount"
        android:layout_toRightOf="@id/UserInputAmount"
        android:drawSelectorOnTop="true"/>


</LinearLayout>
