<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/item_background"
    android:id="@+id/RecipeLayout"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/RecNameVw"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/FltActBtn"
        android:layout_alignLeft="@+id/AmountVw"
        android:layout_alignStart="@+id/AmountVw" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_add"
        app:elevation="0dp"
        app:fabSize="mini"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/FltActBtn" />

    <TextView
        android:id="@+id/NameVw"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/AmountVw"
        android:layout_alignBottom="@+id/AmountVw"
        android:layout_toRightOf="@+id/RecNameVw"
        android:layout_toEndOf="@+id/RecNameVw"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/AmountVw"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="21dp"
        android:layout_below="@+id/RecNameVw"
        android:layout_toRightOf="@+id/FltActBtn"
        android:layout_toEndOf="@+id/FltActBtn"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Button"
        android:layout_height="50dp"
        android:layout_alignParentRight="@+id/RecNameVw"
        android:layout_alignParentEnd="true"
        android:id="@+id/button"
        android:layout_alignTop="@+id/RecNameVw"
        android:layout_width="50dp" />

</RelativeLayout>